{% extends "base.html.twig" %}

{% block title %}Home{% endblock %}

{% block content %}
    <h1>Liste des étudiants</h1>
        <table class="table table-striped table-dark">
            <thead> <!-- En-tête du tableau -->
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>E-Mail</th>
                <th>Login</th>
                <th>Infos (Modifiables)</th>
                <th>Supprimer</th>
            </tr>
            </thead>

            <tbody > <!-- Corps du tableau -->
    {% for etudiant in etudiants %}
            <tr>
                <td>{{ etudiant.getNom }}</td>
                <td>{{ etudiant.getPrenom }}</td>
                <td>{{ etudiant.getEmail }}</td>
                <td>{{ etudiant.getLogin }}</td>
                <td>
                    <a href="/etudiant/{{ etudiant.getIdEtudiant }}"><button class="btn btn-primary">Update</button></a>
                </td>
                <td>
                    <a href="/etudiant/{{ etudiant.getIdEtudiant }}/del"><button class="btn btn-danger">Delete</button></a>
                </td>
            </tr>
    {% endfor %}

            </tbody>
        </table>
    <a href="etudiant/add"><button class="btn btn-outline-light">+ Ajouter un étudiant</button></a>

{% endblock %}